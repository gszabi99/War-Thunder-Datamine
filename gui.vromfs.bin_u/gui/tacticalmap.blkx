{
  "img": {
    "position": "absolute",
    "size": "3sw - 3sw*@isInVr, sh/3+1",
    "pos": "-sw,sh-h-1@bh",
    "background-image": "#ui/gameuiskin#optionlist_background_down"
  },
  "root": {
    "flow": "vertical",
    "background-color": "@shadeBackgroundColor",
    "type": "big"
  },
  "tdiv": [
    {
      "position": "absolute",
      "pos": "@titlePos,1@topBarHeight",
      "flow": "vertical",
      "smallFont": "yes",
      "textareaNoTab": [
        {
          "id": "menu-title",
          "overlayTextColor": "active",
          "mediumFont": "yes",
          "textShade": "yes",
          "text": ""
        },
        {
          "id": "conditions_text",
          "overlayTextColor": "premiumNotEarned",
          "textShade": "yes",
          "text": ""
        }
      ]
    },
    {
      "id": "update_timer",
      "behaviour": "Timer",
      "timer_handler_func": "update"
    }
  ],
  "optionlist_container": {
    "id": "flight_menu_bgd",
    "type": "big",
    "style": "padding:10@sf/@pf;",
    "tdiv": [
      {
        "id": "objectives_panel",
        "size": "50%pw, ph",
        "max-width": "pw-ph",
        "overflow": "hidden",
        "display": "hide",
        "optionlist_line_left": [
          {
            "size": "pw,5*@scrn_tgt/100.0",
            "pos": "0,-0.3*@scrn_tgt/100.0",
            "position": "relative",
            "activeText": {
              "text": "#map/primary_objectives",
              "pare-text": "yes",
              "left": "-1*@scrn_tgt/100.0",
              "width": "pw",
              "style": "text-align:right;"
            }
          },
          {
            "size": "pw,5*@scrn_tgt/100.0",
            "activeText": {
              "text": "#map/secondary_objectives",
              "pare-text": "yes",
              "left": "-1*@scrn_tgt/100.0",
              "width": "pw",
              "style": "text-align:right;"
            }
          }
        ],
        "_newline": [
          {},
          {},
          {}
        ],
        "div": [
          {
            "width": "pw",
            "height": "53%ph",
            "overflow": "hidden",
            "tdiv": {
              "width": "pw",
              "min-height": "ph",
              "pos": "0,ph-h",
              "position": "relative",
              "padding-bottom": "0.8*@scrn_tgt/100.0",
              "flow": "vertical",
              "id": "primary_tasks_list"
            }
          },
          {
            "width": "pw",
            "height": "fh",
            "overflow": "hidden",
            "tdiv": {
              "id": "secondary_tasks_list",
              "width": "pw",
              "min-height": "ph",
              "pos": "0,ph-h",
              "position": "relative",
              "padding-bottom": "0.8*@scrn_tgt/100.0",
              "flow": "vertical"
            }
          }
        ]
      },
      {
        "id": "pilots_panel",
        "size": "50%pw, ph",
        "max-width": "pw-ph",
        "overflow": "hidden",
        "optionlist_line_left": {
          "size": "pw,5*@scrn_tgt/100.0",
          "activeText": {
            "text": "#map/pilot_list",
            "pare-text": "yes",
            "tdalign": "right"
          }
        },
        "_newline": {},
        "tdiv": {
          "size": "pw, 16@rows16height + 4",
          "overflow-y": "auto",
          "margin-top": "1*@scrn_tgt/100.0",
          "scroll-align": "left",
          "padding-left": "10+0.5*@scrn_tgt/100.0",
          "table": {
            "width": "pw",
            "id": "pilots_list",
            "baseRow": "yes",
            "selType": "left",
            "text-valign": "center",
            "behavior": "PosNavigator",
            "selfFocusBorder": "yes",
            "total-input-transparent": "yes",
            "navigatorShortcuts": "yes",
            "css-hier-invalidate": "all",
            "on_dbl_click": "onPilotsDblClick",
            "on_click": "onPilotsSelect",
            "on_activate": "onPilotsSelect"
          }
        }
      },
      {
        "size": "ph, ph",
        "min-width": "50%pw",
        "div": [
          {
            "behaviour": "button",
            "id": "POI_resetter",
            "size": "sw,sh",
            "position": "root",
            "on_click": "onRespawnScreenClick"
          },
          {
            "pos": "ph-w-2@blockInterval, ph-h-2@blockInterval",
            "position": "absolute",
            "flow": "vertical",
            "Button_text": [
              {
                "id": "btn_move_map",
                "tooltip": "#options/moveMap",
                "class": "image",
                "btnName": "RB",
                "_on_click": "onMoveMapActivate",
                "ButtonImg": {},
                "img": {
                  "background-image": "#ui/gameuiskin#dnd_icon.svg"
                }
              },
              {
                "id": "btn_set_point_of_interest",
                "tooltip": "#options/setPointOfInterest",
                "class": "image",
                "btnName": "LT",
                "on_click": "onSetPointOfInterest",
                "ButtonImg": {},
                "img": {
                  "id": "hud_poi_img",
                  "background-image": "#ui/gameuiskin#map_interestpoint.svg"
                }
              },
              {
                "id": "btn_set_hud_type",
                "tooltip": "#options/forceHudType",
                "class": "image",
                "btnName": "LB",
                "on_click": "onForcedSetHudType",
                "ButtonImg": {},
                "img": {
                  "id": "hud_type_img",
                  "background-image": "#ui/gameuiskin#objective_tank.svg"
                }
              }
            ]
          }
        ],
        "tacticalMap": {
          "size": "ph,ph",
          "id": "tactical-map"
        }
      }
    ]
  },
  "navBarStatic": {
    "navLeft": {
      "activeText": {
        "id": "pilot_aircraft",
        "margin-left": "1@buttonMargin",
        "text": ""
      }
    }
  },
  "navBar": {
    "navRight": {
      "Button_text": [
        {
          "id": "btn_select",
          "text": "#mainmenu/btnSelect",
          "btnName": "A",
          "on_click": "onStart",
          "skip-navigation": "yes",
          "ButtonImg": {}
        },
        {
          "id": "btn_back",
          "text": "#mainmenu/btnBack",
          "btnName": "B",
          "_on_click": "goBack",
          "display": "hide",
          "skip-navigation": "yes",
          "ButtonImg": {}
        }
      ]
    }
  },
  "root_button": {
    "id": "screen_button_back",
    "display": "hide",
    "position": "root",
    "size": "sw,sh",
    "behavior": "button",
    "_on_click": "goBack"
  }
}