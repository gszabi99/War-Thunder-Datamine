{
  "root": {
    "type": "big",
    "blur": {},
    "blur_foreground": {},
    "frame": {
      "id": "reward_frame",
      "class": "wndNav",
      "width": "0.75@scrn_tgt",
      "pos": "0.5pw-0.5w, 0.5ph-0.5h",
      "position": "absolute",
      "frame_header": {
        "activeText": {
          "id": "award_name",
          "width": "p.p.w-2@buttonHeight",
          "caption": "yes",
          "pare-text": "yes"
        },
        "Button_close": {
          "id": "btn_close"
        }
      },
      "img": {
        "id": "award_image",
        "position": "relative",
        "width": "pw",
        "height": "0.75w"
      },
      "tdiv": {
        "width": "pw",
        "position": "relative",
        "flow": "vertical",
        "overflow-y": "auto",
        "textAreaCentered": [
          {
            "id": "award_desc",
            "position": "relative",
            "width": "pw",
            "removeParagraphIndent": "yes",
            "text": "",
            "on_link_click": "proccessLinkFromText"
          },
          {
            "id": "award_reward",
            "position": "relative",
            "width": "pw",
            "overlayTextColor": "userlog",
            "removeParagraphIndent": "yes",
            "text": "",
            "on_link_click": "proccessLinkFromText"
          },
          {
            "id": "next_award",
            "width": "pw",
            "position": "relative",
            "textHide": "yes",
            "text": ""
          }
        ],
        "tdiv": {
          "id": "reward_markup",
          "left": "50%pw-50%w",
          "position": "relative",
          "flow": "vertical",
          "display": "hide"
        }
      },
      "navBar": {
        "navRight": {
          "Button_text": [
            {
              "id": "btn_use_decorator",
              "text": "#decorator/use/decal",
              "btnName": "Y",
              "_on_click": "onUseDecorator",
              "enable": "no",
              "display": "hide",
              "ButtonImg": {}
            },
            {
              "id": "btn_ok",
              "text": "#mainmenu/btnOk",
              "btnName": "X",
              "_on_click": "onOk",
              "ButtonImg": {}
            }
          ]
        }
      }
    }
  }
}